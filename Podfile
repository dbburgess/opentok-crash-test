# Define an abstract target for our project.
abstract_target 'OpenTok-Crash-TestAbstractTarget' do

    #################
    # Configuration #
    #################

    # For Swift magic.
    use_frameworks!

    # Specify the platform to build static libs on.
    platform :ios, '9.3'

    ########
    # Pods #
    ########

    # Magic and wizardry for real-time video chat and stuffz.
    pod 'OpenTok', '2.8.1'

    ###########
    # Targets #
    ###########

    target 'OpenTok-Crash-Test'
    target 'OpenTok-Crash-TestTests'
    target 'OpenTok-Crash-TestUITests'

end

